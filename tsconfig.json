{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base Default TSConfig",
  "extends": ["@tsconfig/node20/tsconfig", "@tsconfig/strictest/tsconfig"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": false,
    "lib": ["DOM", "ES2021.String", "ES2023"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noUnusedLocals": false /* This is handled by eslint */,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src", "test", "drizzle.config.ts", "vitest.config.ts"]
}
